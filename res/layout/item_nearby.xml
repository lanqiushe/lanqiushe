<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/item_nearby_head_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_nearby_head_iv"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_nearby_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:textSize="@dimen/text_size_nor__" />

            <TextView
                android:visibility="gone"
                android:id="@+id/item_nearby_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:textColor="#929497"
                android:textSize="@dimen/text_size_nor" />
        </LinearLayout>

        <TextView
           
            android:id="@+id/item_nearby_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:textColor="#929497"
             android:visibility="gone"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
          
             android:visibility="gone"
            android:id="@+id/item_nearby_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:textColor="#929497"
            android:textSize="@dimen/text_size_nor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/distance" />

            <TextView
                  android:id="@+id/item_nearby_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
              
                android:textColor="#929497"
                android:textSize="@dimen/text_size_nor" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>